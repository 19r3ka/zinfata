div(ng-controller='loginCtrl')
  form(name='loginForm', role='form')
    .form-group
      input.form-control(type='text', name='handle', placeholder='Handle', ng-model='login.handle', required, autofocus)
    .form-group
      input.form-control(type='password', name='password', placeholder='Password', ng-model='login.password', required)
    .form-group
      button.btn(type='submit', class=['btn-primary', 'form-control'], ng-click='authenticate()') Log In!

  p {{ login.handle }}

append scripts
  script(src='/zinfataClient/app/components/users/login/loginController.js')
