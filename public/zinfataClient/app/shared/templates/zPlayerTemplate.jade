#z-player-bottom(ng-show="isLoggedIn()")
  .cent
  .z-player-container
    .cent
    img(ng-src='{{ track.coverArt }}' alt='cover art' class='track-thumbnail')
    .z-player-track-infos
      span.z-player-track-title
        a(href='/track/{{ track._id }}') {{ track.title | limitTo:40 }} 
          span(ng-if="track.title.length > 40") ...
      br/
      | by
      span.z-player-track-author
        a(href='/user/{{ track.artist.id }}') {{ track.artist.handle | limitTo:30  }}
          span(ng-if="track.artist.handle.length > 30") ...
      br/
      | From
      span.z-player-track-album
        a(href='/album/{{ track.album.id }}') {{ track.album.title | limitTo:25 }}
          span(ng-if="track.album.title.length > 25") ...
    .z-control-bt-container
      .cent
      .z-control-bt.z-control-bt-stop(ng-click='stop()')
        .cent
        i.fa.fa-stop
      .z-control-bt.z-control-bt-previous(ng-click='prev()')
        .cent
        i.fa.fa-step-backward
      .z-control-bt.z-control-bt-play(ng-click='playPause()')
        .cent
        i.fa.fa-play(ng-show='!playing')
        i.fa.fa-pause(ng-show='playing')
      .z-control-bt.z-control-bt-next(ng-click='next()')
        .cent
        i#z-control-bt-volume.fa.fa-step-forward
      .z-track-volume-container
        input(id="player-volume-slider" orient="vertical"  type="range" min="0" max="100" value="50")
        i.fa.fa-volume-up(ng-click="mute()" ng-show="!muted()") 
        i.fa.fa-volume-off(ng-click="mute()" ng-show="muted()") 
      .z-track-duration-container
        .cent
        input(id="track-duration-slider"  type="range" min="0" max="100" value="0")
        .duration-infos.
          {{ currentTime | duration2time  }}
          / 
          {{ track.duration | duration2time  }}
    #expand-player-controllers
      i.fa.fa-chevron-up
    #compress-player-controllers
      i.fa.fa-chevron-down
     

