.footer(id='z-player-bottom', ng-show="isLoggedIn()")
  .container
    sound-manager
    .media
      .media-left
        a(href='#')
          img.media-object(name='coverArt', width='75', ng-src='{{ track.img }}', alt='{{ track.title }}')
      .media-body
        .row
          .col-md-3
            h5.media-heading(class='z-ellipsis'): a(href='track/{{ track._id }}') {{ track.title }}
              .small: a(href='album/{{ track.album.id }}') {{ track.album.title }}
            h6: a(href='user/{{ track.artist.id }}') by: {{ track.artist.handle }}
          .col-md-9
            .row(id='z-player-time')
              .col-md-1
                p#sound-position {{ sound.position | duration2time }}
              .col-md-9
                input#z-player-slider(type='range', name='z-player-slider', min=0, max='{{sound.duration}}', ng-model='sound.position',defaultValue='0', disabled) 
              .col-md-1 
                p#sound-duration {{ sound.duration | duration2time }}
            .row(id='z-player-control')
              .col-md-4
                a(href='#', ng-click='prev()')
                  i.fa.fa-step-backward
              .col-md-4      
                a(href='#', ng-click='playPause()')
                  i.fa.fa-play(ng-show='!isPlaying')
                  i.fa.fa-pause(ng-show='isPlaying')
              .col-md-4
                a(href='#', ng-click='next()')
                  i.fa.fa-step-forward
  pre
    {{isPlaying}}
