doctype
html.no-js
  head
    base(href='/')
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title= title
    meta(name='description', content='Le plateforme de la musique togolaise.')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/zinfataClient/assets/libs/bootstrap-3.3.5/css/bootstrap.css')
    link(rel='stylesheet', href='/zinfataClient/assets/libs/font-awesome-4.5.0/css/font-awesome.min.css')
    link(rel='stylesheet', href="../stylesheets/style.min.css")
    block scripts
      script(src='/zinfataClient/assets/libs/jquery/jquery-2.1.4.min.js')
      script(src='/zinfataClient/assets/libs/bootstrap-3.3.5/js/bootstrap.js')
      script(src='/zinfataClient/assets/libs/angular-1.4.5/angular.js')
  body.container(ng-app='zinfataClient')
    .row
      <!--[if lt IE 8]>
      p.browsehappy
        | You are using an <strong>outdated</strong> browser.
        | Please <a href="http://browsehappy.com/">upgrade your browser</a>
        | to improve your experience.
      <![endif]-->
      block header
        include app/shared/header/header
    .row
      block messages
        include app/shared/messages/messageBox
    .row
      .col-md-2#sidebar
        block sidebar
          include app/shared/sidebar/sidebar
      .col-md-7
        block content

      .col-md-3
        block media
          include app/shared/player/player
    .z-player-bottom
      .z-player-container
        img(src='../../images/uploads/5b609f2bbcd2df5fd39971e43e5c4007' width='50px' class='track-thumbnail')
        .z-player-track-infos
          span.z-player-track-title
            | The end of the end not the end of the begin !
          br/
          | by
          span.z-player-track-author
            | The author of end of the end not the end of the begin !
          br/
          | From
          span.z-player-track-album
            | The album name here!
        .z-control-bt-container
          .z-control-bt.z-control-bt-stop
            i.fa.fa-stop
          .z-control-bt.z-control-bt-previous
            i.fa.fa-step-backward
          .z-control-bt.z-control-bt-play
            i.fa.fa-play
          .z-control-bt.z-control-bt-next
            i.fa.fa-step-forward
          i.fa.fa-volume-up 
          .volume-slider
            .volume-spin
              i.spin
          .z-track-duration-container
            .duration-slider
              .duration-spin
                i.spin

